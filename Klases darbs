void average()

{
vector n { 1, 2, 3, 4, 5 };
cout << (n[0] + n[1] + n[2] + n[3] + n[4]) / 5;

}

void even() {

vector n{ 1,2,3,4,5 };
int i = 0;
do {

if (n[i] % 2 == 0)cout << n[i] << " ";
i++;

} while (i < n.size());

}

void prime()
{
vector p {2, 3, 7, 11, 13, 17, 19, };
int num1;
cout << "ievadi 1 sk zem 20 kas ir pozitivs" << endl;
cin >> num1;
int i = 0; bool a = false;
do {
if (num1 == p[i]) { cout << "true"; a = true; }
i++;
} while (i < p.size());
if (a == false)cout << "false";

}

void bg()

{

vector bg{ 1,2,3 };
int i = 0, sum = 0;

do {

cout << bg[i] * bg[i] << " ";
sum = sum + bg[i] * bg[i];

i++;
} while (i < bg.size());
cout << sum;

}

void poz()

{

vector pozit{ 1,-2,3,-4,5 };

int i = 0;

do {
if (pozit[i] > 0) cout << pozit[i] << " ";

i++;
} while (i < pozit.size());
}

void negat()

{
vector negat{ 1,-2,3,-4,5 };
int i = 0;
do {
if (negat[i] < 0) cout << negat[i] << " ";

i++;

} while (i > negat.size());

}

